extends layout

block content
  h1(class="text-center")= title

  p(class="text-center text-secondary mt-3 fs-5") Welcome to #{title}
  -if(flag == 1)
    .alert.alert-danger(role="alert" class="text-center") #{message}
  -if(flag == 0)
    .alert.alert-success(role="alert" class="text-center") #{message}
  .row
    .col-sm-1 
    .col-sm-4 
      include include/login
    .col-sm-2 
    .col-sm-4
      include include/registration
    .col-sm-1
