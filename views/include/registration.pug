extends ../layout

block content
    .reg-box(class="mt-5")
        .header
            h2 Registration
        form(action="/auth_reg", method="post")
            .form-group(class="mt-4")  
                label(for="fullname" class="fs-4 text-secondary") Fullname
                input(type="text" name="fullname" class="form-control p-3")

            .form-group(class="mt-4")  
                label(for="email" class="fs-4 text-secondary") Email 
                input(type="email" name="email" class="form-control p-3")

            .form-group(class="mt-4")  
                label(for="password" class="fs-4 text-secondary") Password 
                input(type="password" name="password" class="form-control p-3")

            .form-group(class="mt-4")  
                label(for="cpassword" class="fs-4 text-secondary") Confirm Password 
                input(type="password" name="cpassword" class="form-control p-3")

            button(type="submit" class="btn btn-primary mt-4 btn-lg") Submit